<head>
	{% include 'FlyBundle:Helper:meta.html.twig' %}

	<!-- Vendor CSS -->
	<link href="{{ asset('bundles/fly/plugins/animate.css/animate.min.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/fly/plugins/material-design-iconic-font/dist/css/material-design-iconic-font.min.css') }}" rel="stylesheet">

	<!-- CSS -->
	<link href="{{ asset('bundles/fly/css/app.min.1.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/fly/css/app.min.2.css') }}" rel="stylesheet">
</head>

<body class="login-content">
<!-- Login -->
{{ form_start(form, {'attr': {'class': 'lc-block toggled', 'id': 'l-login'}}) }}
	{{ form_errors(form) }}
	<div class="input-group m-b-20">
		<span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
		<div class="fg-line">
			{{ form_widget(form._username, {attr : {'class': 'form-control', 'placeholder' : 'Usu√°rio'} }) }}
		</div>
	</div>

	<div class="input-group m-b-20">
		<span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
		<div class="fg-line">
			{{ form_widget(form._password, {attr : {'class': 'form-control', 'placeholder' : 'Senha'} }) }}
		</div>
	</div>

	<div class="clearfix"></div>

	<div class="checkbox">
		<label>
			<input type="checkbox" value="">
			<i class="input-helper"></i>
			Manter Logado
		</label>
	</div>

	<button class="btn btn-login btn-danger btn-float"><i class="zmdi zmdi-arrow-forward"></i></button>
	{{ form_rest(form) }}
{{ form_end(form) }}



<!-- Javascript Libraries -->
<script src="{{ asset('bundles/fly/plugins/jquery/dist/jquery.min.js') }}"></script>
