{% form_theme form _self %}

{% block form_row %}
    {% spaceless %}
        {% include 'FlyBundle:Fields:form_row.html.twig' with { form : form } only %}
    {% endspaceless %}
{% endblock form_row %}

{% block checkbox_row %}
