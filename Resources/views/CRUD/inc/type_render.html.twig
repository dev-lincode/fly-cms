{% if value.type == 'date'  %}
    {{ attribute(entity, field) | date('d/m/Y') }}
{% elseif value.type == 'datetime'  %}
    {{ attribute(entity, field) | date('d/m/Y H:i:s') }}
{% elseif value.type == 'boolean' %}
    <i style="font-size: 18px;" class="zmdi zmdi-{{ attribute(entity, field) ? 'check-circle' : 'close-circle' }} zmdi-hc-fw"></i>
{% elseif value.type == 'image' %}
    {% if attribute(entity, field) %}
        <img height="50" src="{{ asset(attribute(entity, field)) }}" />
    {% endif %}
{% elseif value.type == 'html' %}
    {{ attribute(entity, field) | raw }}
{% else %}
    {{ attribute(entity, field) }}
{% endif %}